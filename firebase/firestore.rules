
service cloud.firestore {
  match /databases/{database}/documents {
    function adviceIsPendingAndUserIsLoggedIn() {
      return request.auth.uid != null && !resource.data.uid;
    }

    function userIsMedicalProffesional() {
      return request.auth.uid != null && request.auth.token.medicalproffesional;
    }

    function adviceBelongsToUser() {
      return request.auth.uid != null && resource.data.uid == request.auth.uid;
    }

    match /ahpaa_advices {
      allow read: if userIsMedicalProffesional() || adviceIsPendingAndUserIsLoggedIn() || adviceBelongsToUser();
      allow create: if userIsMedicalProffesional();
      allow update: if userIsMedicalProffesional() || adviceBelongsToUser();
    }
  }
}
