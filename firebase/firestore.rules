
service cloud.firestore {
  match /databases/{database}/documents {
    function adviceIsPendingAndUserIsLoggedIn() {
      return request.auth.uid != null && !resource.data.uid;
    }

    function userIsMedicalProfessional() {
      return request.auth.uid != null && request.auth.token.medicalprofessional;
    }

    function adviceBelongsToUser() {
      return request.auth.uid != null && resource.data.uid == request.auth.uid;
    }

    match /ahpaa_advices {
      allow read: if userIsMedicalProfessional() || adviceIsPendingAndUserIsLoggedIn() || adviceBelongsToUser();
      allow create: if userIsMedicalProfessional();
      allow update: if userIsMedicalProfessional() || adviceBelongsToUser();
    }
  }
}
