{
  "compilerOptions": {
    "declaration": true,
    "sourceMap": true,
    "module": "commonjs",
    "strict": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": false,
    "noImplicitAny": true,
    "allowJs": false,
    "outDir": "lib",
    "target": "es6",
    "baseUrl": "src/",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "paths": {
      "*": [
        "node_modules/*",
        "src/@types/*"
      ],
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "src/settings",
    "src/**/*.test.ts",
    "**/_test/**/*"
  ],
  "references": []
}